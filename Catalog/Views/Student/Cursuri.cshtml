@model List<Catalog.ViewModels.CursuriPeAnViewModel>

@{
    ViewData["Title"] = "Cursuri";
}

<h2>Cursuri</h2>

<div class="mb-3">
    <form method="get" class="form-inline">
        <input type="text" name="searchString" value="@ViewBag.CurrentFilter" class="form-control mr-2" placeholder="Search courses or professors" />
        <button type="submit" class="btn btn-primary">Search</button>
    </form>
</div>

<div class="btn-group mb-3" role="group">
    <a asp-action="Cursuri" asp-route-sortOrder="name" class="btn btn-outline-primary">Sort by Name</a>
</div>

@foreach (var group in Model)
{
    <h3>Academic Year: @group.AnUniversitar</h3>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Course Name</th>
                <th>Professor</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var curs in @group.Cursuri)
            {
                <tr>
                    <td>@curs.Curs.NumeCurs</td>
                    <td>@curs.Curs.Profesor.Nume</td>
                </tr>
            }
        </tbody>
    </table>
}
